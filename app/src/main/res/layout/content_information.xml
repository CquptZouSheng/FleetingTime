<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zousheng.fleetingtime.InformationActivity"
    tools:showIn="@layout/activity_information">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#aeffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="410dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/information_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:maxHeight="36dp"
                android:maxWidth="36dp"
                android:src="@drawable/name" />

            <TextView
                android:id="@+id/informationtext_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/information_name"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/information_name"
                android:text="邹 晟"
                android:textColor="#8a8a8a"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/information_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/information_name"
                android:layout_below="@+id/information_name"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:maxHeight="36dp"
                android:maxWidth="36dp"
                android:src="@drawable/studentnumber" />

            <TextView
                android:id="@+id/informationtext_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/information_number"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/information_number"
                android:text="2015211529"
                android:textColor="#8a8a8a"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/information_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/information_number"
                android:layout_below="@+id/information_number"
                android:layout_marginRight="24dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:maxHeight="36dp"
                android:maxWidth="36dp"
                android:src="@drawable/telephone" />

            <TextView
                android:id="@+id/informationtext_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/informationtext_name"
                android:layout_alignTop="@+id/information_telephone"
                android:layout_marginTop="5dp"
                android:text="18875146325"
                android:textColor="#8a8a8a"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/information_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/information_number"
                android:layout_below="@+id/information_telephone"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:maxHeight="36dp"
                android:maxWidth="36dp"
                android:src="@drawable/qq" />

            <TextView
                android:id="@+id/informationtext_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/informationtext_number"
                android:layout_alignTop="@+id/information_qq"
                android:layout_marginTop="5dp"
                android:text="382223154"
                android:textColor="#8a8a8a"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/informationtext_saying"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="——Nothing is true,everything is permitted."
                android:textColor="#8a8a8a"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/informationtext_qq"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
